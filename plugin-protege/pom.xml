<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.github.galigator.openllet</groupId>
		<artifactId>openllet-parent</artifactId>
		<version>2.6.6-SNAPSHOT</version>
	</parent>
        
	<artifactId>openllet-protege</artifactId>
	<name>Openllet :: Protege</name>
   <description>Integrates the Openllet reasoner with Protege Desktop.</description>
	<packaging>bundle</packaging>
   
	<properties>
		<protege.version>4.2.1</protege.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>openllet-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>openllet-owlapi</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>openllet-modularity</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>openllet-query</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
		</dependency>

		<dependency>
			<groupId>edu.stanford.protege</groupId>
			<artifactId>org.protege.common</artifactId>
			<version>${protege.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>edu.stanford.protege</groupId>
			<artifactId>org.protege.editor.core.application</artifactId>
			<version>${protege.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>edu.stanford.protege</groupId>
			<artifactId>org.protege.editor.owl</artifactId>
			<version>${protege.version}</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

   <build>
      <plugins>
            <plugin>
              <groupId>org.apache.felix</groupId>
              <artifactId>maven-bundle-plugin</artifactId>
              <version>5.1.8</version>
              <extensions>true</extensions>
              <configuration>
                <instructions>
                    <Bundle-ClassPath>.</Bundle-ClassPath>
                    <Bundle-SymbolicName>${project.artifactId};singleton:=true</Bundle-SymbolicName>
                    <Bundle-Vendor>Galigator</Bundle-Vendor>
                    <Bundle-Name>${project.artifactId}</Bundle-Name>
                    <Bundle-Activator>org.protege.editor.core.plugin.DefaultPluginActivator</Bundle-Activator>
                    <Import-Package>
                      org.protege.editor.core.plugin.*;version="${protege.version}",
                      org.protege.editor.core.*;version="${protege.version}",
                      org.protege.editor.owl.*;version="${protege.version}",
                      *
                    </Import-Package>
<!--
                    <Include-Resource>
                          plugin.xml,
                          {maven-resources},
                          lib/openllet-owlapi-${project.version}.jar=../module-owlapi/target/openllet-owlapi-${project.version}.jar,
                          lib/openllet-query-${project.version}.jar=../module-query/target/openllet-query-${project.version}.jar,
                          lib/openllet-core-${project.version}.jar=../module-core/target/openllet-core-${project.version}.jar,
                          lib/openllet-functions-${project.version}.jar=../module-shared/target/openllet-functions-${project.version}.jar,
                          lib/openllet-modularity-${project.version}.jar=../module-modularity/target/openllet-modularity-${project.version}.jar
                    </Include-Resource>
                    <Private-Package>skeleton</Private-Package>
-->
                 <Require-Bundle>org.eclipse.equinox.registry,
                    org.eclipse.equinox.common,
                    org.protege.common,
                    org.protege.editor.core.application;bundle-version="4.3.0",
                    org.protege.editor.owl;bundle-version="4.3.0",
                    org.semanticweb.owl.owlapi;bundle-version="5.1.0"</Require-Bundle><!-- TODO : link version to parent pom.xml -->
                 <Embed-Dependency>
                    org.github.openllet*;inline=true;scope=compile|runtime|provided,
                    jena-*;inline=false;scope=compile|runtime|provided,
                    jgrapht-ext;inline=false;scope=compile|runtime|provided,
                    slf4j*;inline=false;scope=compile|runtime|provided,
                    jcl-over*;inline=false;scope=compile|runtime|provided,
                    xml-apis;inline=false;scope=compile|runtime|provided,
                    httpclient;inline=false;scope=compile|runtime|provided,
                    antlr*;inline=false;scope=compile|runtime|provided,
                    !org.apache.rdf4j*,
                    !org.apache.felix*,
                    !jackson*,
                    !trove4j*,
                    !org.eclipse*,
                    !org.protege*,
                    !protege*,
                    !owlapi*,
                    !aopalliance*,
                    !javax*,
                    !json*,
                    !semargl*,
                    !guava*,
                    !guice*,
                    !jsr305
                 </Embed-Dependency>
                 <Embed-Transitive>true</Embed-Transitive>
                 <Embed-Directory>lib</Embed-Directory>
                 <Export-Package>org.github.openllet.*</Export-Package>
                 <Import-Package>org.protege.*, javax.xml.bind, org.w3c.dom.*</Import-Package>
                </instructions>
                <executions>
                    <execution>
                      <id>bundle-manifest</id>
                      <phase>install</phase>
                      <goals>    
                          <goal>manifest</goal>
                      </goals>   
                    </execution>
                </executions>
              </configuration>
            </plugin>
            <plugin>
              <artifactId>maven-eclipse-plugin</artifactId>
              <version>2.10</version>
              <configuration>
                <pde>true</pde>
              </configuration>
            </plugin>
      </plugins>
   </build>

</project>
